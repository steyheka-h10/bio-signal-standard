{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Skin Temperature Data",
  "description": "Schema for skin temperature measurements from electronic tattoos",
  "type": "object",
  "properties": {
    "value": {
      "type": "number",
      "description": "Temperature value"
    },
    "unit": {
      "type": "string",
      "enum": ["celsius", "fahrenheit", "kelvin"],
      "default": "celsius",
      "description": "Unit of measurement"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of measurement"
    },
    "sensor_id": {
      "type": "string",
      "description": "Identifier of the sensor that produced the measurement"
    },
    "accuracy": {
      "type": "number",
      "description": "Estimated accuracy of the measurement in the same unit",
      "minimum": 0
    }
  },
  "required": ["value", "unit", "timestamp"],
  "additionalProperties": false
}